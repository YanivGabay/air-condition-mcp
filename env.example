# SwitchBot API Credentials
# Get these from the SwitchBot app: Profile -> Preferences -> Tap "App Version" 10x -> Developer Options

SWITCHBOT_TOKEN=your_switchbot_token_here
SWITCHBOT_SECRET=your_switchbot_secret_here

# Your AC Device ID
# Find this by running: python test_connection.py
# Or use the get_ac_devices MCP tool after setup

SWITCHBOT_AC_DEVICE_ID=your_ac_device_id_here

# ============================================
# CRON AUTOMATION (Optional - for night automation)
# ============================================

# OpenRouter API Key (for AI decisions)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter model (optional, defaults to google/gemma-3-4b-it)
# OPENROUTER_MODEL=google/gemma-3-4b-it

# Weather data uses Open-Meteo (free, no API key required)
# https://open-meteo.com/

# Supabase (for logging history + JWT auth for MCP)
# Get from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Auth refresh token for MCP authentication
# Generate by running: python cron/setup_auth_user.py --email your@email.com --password YourPassword
SUPABASE_REFRESH_TOKEN=your_refresh_token_here

# MCP Server URL (for cron to call the hosted MCP server)
MCP_SERVER_URL=https://your-server.fastmcp.app/mcp
